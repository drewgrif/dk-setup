#!/bin/bash
# Get current dk layout with icon - simple file-based approach

# Read layout from file (we'll write to this file when changing layouts)
LAYOUT_FILE="/tmp/dk-current-layout"

# If file exists, read it
if [ -f "$LAYOUT_FILE" ]; then
    layout=$(cat "$LAYOUT_FILE")
else
    # Default to spiral (your preferred default)
    layout="spiral"
fi

# Map layouts to icons
case "$layout" in
    "tile")    echo "󰙀" ;;      # Tile icon
    "rtile")   echo "󱒅" ;;      # Right tile icon  
    "mono")    echo "󱟱" ;;      # Monocle/fullscreen icon
    "grid")    echo "󰓰" ;;      # Grid icon
    "spiral")  echo "󱒋" ;;      # Spiral icon
    "dwindle") echo "󱒌" ;;      # Dwindle icon
    "none")    echo "󰖲" ;;      # Floating icon
    *)         echo "󱒋" ;;      # Default to spiral icon
esac