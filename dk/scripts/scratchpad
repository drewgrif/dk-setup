#!/bin/bash

# Simple scratchpad for dk

APP="${1:-scratchpad}"
CMD="${2:-}"
CLASS="$APP"

# Terminal command
if [ -n "$CMD" ]; then
    TERM="st -c $CLASS -e $CMD"
else
    TERM="st -c $CLASS"
fi

# Check if exists
id=$(xdotool search --class "$CLASS" | head -1)

if [ -z "$id" ]; then
    # Create
    $TERM &
    sleep 0.3
    id=$(xdotool search --class "$CLASS" | head -1)
    
    # Float and position
    [ -n "$id" ] && {
        hex=$(printf "0x%x" "$id")
        dkcmd win "$hex" float=true stick=true
        
        if [ "$APP" = "scratchpad" ]; then
            # Terminal - top center
            xdotool windowsize "$id" 75% 65%
            xdotool windowmove "$id" 12% 30
        else
            # Other apps - centered
            xdotool windowsize "$id" 60% 50%
            xdotool windowmove "$id" 20% 25%
        fi
    }
else
    # Toggle
    if xdotool search --onlyvisible --class "$CLASS" >/dev/null; then
        xdotool windowunmap "$id"
    else
        xdotool windowmap "$id"
        xdotool windowactivate "$id"
    fi
fi