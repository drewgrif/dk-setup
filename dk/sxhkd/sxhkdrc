# Launch Browser (Firefox)
super + b
	firefox-esr

# Launch Private Browser (Firefox Incognito Mode)
super + shift + b
	firefox-esr -private-window

# Launch Terminal (Wezterm)
super + Return
	wezterm

# Launch Rofi Application Menu
super + space
   	rofi -show drun -modi drun -line-padding 4 -hide-scrollbar -show-icons

# Show Keybinding Help Script
super + h
	~/.config/dk/scripts/help

# Launch File Manager (Thunar)
super + f
	thunar

# Launch Text Editor (Geany)
super + e
	geany

# Launch dmenu
super + p
	dmenu_run

# Toggle Scratchpad Terminal
super + shift + Return
    ~/.config/dk/scripts/scratchpad

# Increase Volume (Custom Script)
super + Insert
    ~/.config/dk/scripts/changevolume up

# Decrease Volume (Custom Script)
super + Delete
	~/.config/dk/scripts/changevolume down

# Mute Volume (Custom Script)
super + m
	~/.config/dk/scripts/changevolume mute

# Increase Volume (Using pamixer)
XF86AudioRaiseVolume
	pamixer -i 2

# Decrease Volume (Using pamixer)
XF86AudioLowerVolume
	pamixer -d 2

# Increase Screen Brightness
XF86MonBrightnessUp
	xbacklight +10

# Decrease Screen Brightness
XF86MonBrightnessDown
	xbacklight -10

# Take a Screenshot (Region Select)
super + Print
	flameshot gui --path ~/Screenshots/

# Take a Fullscreen Screenshot
Print
	flameshot full --path ~/Screenshots/

# Reload sxhkd (Hotkey Daemon)
super + Escape
	pkill -USR1 -x sxhkd;notify-send 'sxhkd' 'Reloaded config'

# Reload dk Configuration
super + shift + r
	$HOME/.config/dk/dkrc; notify-send 'dk' 'Reloaded config'

# Quit dk (Exit Window Manager)
super + shift + q
	dkcmd exit

# Close Focused Window
super + q
	dkcmd win kill

# Cycle Through Windows
super + Tab
	dkcmd win cycle

# Toggle Floating Mode
super + shift + space
	dkcmd win float

# Toggle Sticky Mode (Window on All Workspaces)
super + shift + s
	dkcmd win stick

# Focus Next Window
super + Right
	dkcmd win focus next

# Focus Previous Window
super + Left
	dkcmd win focus prev

# Move Window Up in Stack
super + shift + Right
	dkcmd win mvstack up

# Move Window Down in Stack
super + shift + Left
	dkcmd win mvstack down

# Resize Window: Shrink Width
super + ctrl + Left
	dkcmd win resize w=-20

# Resize Window: Grow Height
super + ctrl + Up
	dkcmd win resize h=+20

# Resize Window: Shrink Height
super + ctrl + Down
	dkcmd win resize h=-20

# Resize Window: Grow Width
super + ctrl + Right
	dkcmd win resize w=+20

# Switch to Workspace 1-10
super + {1-9,0}
	dkcmd ws view {1-9,10}

# Move Window to Workspace 1-10
super + shift + {1-9,0}
	dkcmd ws send {1-9,10}

# Move Window to Workspace and Follow 1-10
super + ctrl + {1-9,0}
	dkcmd ws follow {1-9,10}

# Increase Number of Master Windows
super + i
	dkcmd set master +1

# Decrease Number of Master Windows
super + d
	dkcmd set master -1

# Increase Number of Stack Windows
super + shift + i
	dkcmd set stack +1

# Decrease Number of Stack Windows
super + shift + d
	dkcmd set stack -1

# Increase Gap Width
super + equal
	dkcmd set gap +5

# Decrease Gap Width
super + minus
	dkcmd set gap -5

# Increase Border Width
super + ctrl + equal
	dkcmd set border width +1

# Decrease Border Width
super + ctrl + minus
	dkcmd set border width -1

# Increase Outer Border Width
super + ctrl + shift + equal
	dkcmd set border outer_width +1

# Decrease Outer Border Width
super + ctrl + shift + minus
	dkcmd set border outer_width -1

# Shutdown or Reboot
super + x
	~/.config/dk/scripts/power
